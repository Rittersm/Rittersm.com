    <!-- Skills Section -->
    <section id="skills" class="skills-section">
      <div class="container">
        <div class="col-lg-12 text-center">
          <h1>Skills</h1>
        </div>
        <div class="lang-skill">
          <div class="row">
            <div class="col-sm-3 lang-logo">
              <img src="assets/rails-logo.png" class="img-responsive" alt="">
            </div>
            <div class="col-sm-9 lang-desc">
              <div class="row">
                <h2>Ruby on Rails</h2>
              </div>
