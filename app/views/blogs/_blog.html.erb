<div class="post">
  <div class="container">
    <div class="row text-center">
      <%= attachment_image_tag(blog, :header_image, :class => "img-responsive") %>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <h1><%= blog.title %></h1>
      </div>
      <div class="col-xs-12">
        <h4><%= blog.created_at.strftime('%e %b %Y %H:%M:%S%p') %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <h3><%= simple_format(blog.body) %></h3>
      </div>
    </div>
  </div>
</div>
<div class="text-center seperator">
  <h2> -- - -- </h2>
</div>
